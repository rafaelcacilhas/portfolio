---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

export interface Props {
  title: string;
  description: string;
  permalink: string;
  currentPage?: string;
}
const { title, description, permalink, currentPage } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} permalink={permalink} />
  </head>
  <body>
    <div class="layout">
      <Header currentPage={currentPage} />

      <main>
        <slot />
      </main>

      <Footer />
    </div>
    <style>
      .layout {
        display: flex;
        flex-direction: column;
        min-height: 100%;
        min-height: 100vh;
      }

      main {
        flex: 1;
        position: relative;
        box-sizing: border-box;
        width: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
      }
    </style>
  </body>
</html>
