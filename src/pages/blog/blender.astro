---
import SidebarLayout from '../../layouts/SidebarLayout.astro';
import BlenderPage from "../../data/blog-posts/blender/blender.svelte"
import getPostData, { Post} from '../../utils/getPostData';


let blenderPDF = await Astro.glob('../../data/blog-posts/blender.md');
const {Content, frontmatter} = blenderPDF[0]
const {title, description, publishDate, link} = frontmatter;
const { slug, readingTime } = getPostData(blenderPDF[0] as unknown as Post);

---

<SidebarLayout title={title} description={description} permalink={link} >
  <div class="container">
    <a href="/blog" class="back-button">‚Üê Back to Blog</a>
    <header>
      <p>{publishDate} ~ {readingTime}</p>
      <h1>{title}</h1>
      <hr />
    </header>
    <article class="content">
      <Content />
      <!-- <BlenderPage client:only="svelte" children/> -->
    </article>
  </div>
</SidebarLayout>


<style>
  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
  }

  .back-button {
    display: inline-flex;
    align-items: center;
    color: var(--text-secondary);
    text-decoration: none;
    font-size: 0.9rem;
    margin-bottom: 2rem;
    padding: 0.5rem 0;
    transition: color 0.3s ease;
  }

  .back-button:hover {
    color: var(--primary-color);
  }

  header {
    text-align: center;
    margin-bottom: 2rem;
  }

  header h1 {
    margin-bottom: 0.7em;
    color: var(--primary-color);
  }

  header p {
    color: var(--text-secondary);
    text-transform: uppercase;
    font-family: var(--font-family-sans);
    font-weight: 600;
  }

  header hr {
    min-width: 100px;
    width: 30%;
    border: none;
    border-top: 2px solid var(--primary-lighter);
  }

  .content {
    line-height: 1.7;
  }

  @media (max-width: 768px) {
    .container {
      padding: 4rem 1rem 1rem;
    }
  }
</style>
